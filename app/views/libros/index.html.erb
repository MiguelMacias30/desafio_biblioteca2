<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3 offset-md-2">
    <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.label :title_cont %>
      <%= f.search_field :title_cont, class: "formcontrol", placeholder: "Search text" %>
    </div>
    <div class="form-group">
      <%= f.label :status_eq, "Status" %>

    </div>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 offset-md-2">

<table class="table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>Status</th>
      <th>Date delivery</th>
      <th>Date return</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.title %></td>
        <td><%= libro.author %></td>
        <td><%= libro.status %></td>
        <td><%= libro.date_delivery %></td>
        <td><%= libro.date_return %></td>
        <td><%= link_to 'Show', libro %></td>
        <td><%= link_to 'Edit', edit_libro_path(libro) %></td>
        <td><%= link_to 'Destroy', libro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= link_to 'New Libro', new_libro_path %>
    </div>
  </div>
